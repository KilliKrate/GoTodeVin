<!doctype html>
<html lang="en">


<head>
    <%- include('./partials/head.ejs') %>
    <title><%= data.nome %></title>
</head>

<body class="d-flex flex-row">

    <%- include('./partials/sidenav.ejs') %>

    <div class="p-5">
        <a href="/" class="h5 mb-5">
            <span class="px-2"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>Torna al catalogo
        </a>
        <div class="mt-3 mb-4">
            <h1 class="display-5 "><%= data.nome %></h1>
        </div>

        <div class="d-md-flex justify-content-between">
            <img src="resources/images/wine.jpg" alt="wine" style="object-fit: contain;" class="mb-3 mb-md-0 mw-100">
            <div class="d-flex flex-column px-md-5">
                <p class="lead"><strong><%= data.descrizione %></strong></p>
                <p class="lead"><strong>Annata: <%= data.annata %></strong></p>
                <hr>
                <p class="h3 mt-3 mb-5">€ <%= data.prezzo %></p>
                <div class="d-flex flex-row align-items-center mb-3">
                    <button type="button" class="btn btn-primary">Acquista</button>
                    <div class="mx-4" style="width: 150px !important;">
                        <input type="number" class="form-control" id="quantita" placeholder="Quantità" value="1">
                    </div>
                </div>
                <p class="lead">Disponibilità: <%= data.disponibilita %></p>
            </div>
        </div>

    </div>
    </div>

    <%- include('./partials/bottom_scripts.ejs') %>

</body>

<script>
</script>

</html>